---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { formatDate } from '../../utils/formatDate';
import PizzaHeader from '../../components/pizza/PizzaHeader.astro';

export async function getStaticPaths() {
  const posts = await getCollection('pizza');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'pizza'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | Pizza Quest`}
  description={post.data.description}
>
  <div class="min-h-screen">
    <PizzaHeader backLink="/pizza" backText="All Posts" />

    <!-- Article -->
    <article class="py-12 px-4">
      <div class="mx-auto max-w-3xl">
        <!-- Hero Image -->
        {post.data.heroImage ? (
          <div class="aspect-video overflow-hidden rounded-lg mb-8 border border-border">
            <img
              src={post.data.heroImage}
              alt={post.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        ) : (
          <div class="aspect-video bg-surface rounded-lg mb-8 flex items-center justify-center border border-border">
            <span class="text-8xl">üçï</span>
          </div>
        )}

        <!-- Header -->
        <header class="mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            {post.data.title}
          </h1>

          <p class="text-text-muted text-lg mb-6">
            {post.data.description}
          </p>

          <!-- Meta -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-text-muted mb-6">
            <span class="flex items-center gap-2">
              <Icon name="lucide:calendar" class="w-4 h-4" />
              {formatDate(post.data.publishDate, 'long')}
            </span>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap items-center gap-2">
                {post.data.tags.map((tag) => (
                  <span class="text-xs font-mono text-text-muted bg-surface px-2 py-1 rounded border border-border">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <!-- Divider -->
        <div class="flex items-center gap-4 mb-8">
          <div class="flex-1 h-px bg-border"></div>
          <span class="text-accent">üçï</span>
          <div class="flex-1 h-px bg-border"></div>
        </div>

        <!-- Content -->
        <div class="prose">
          <Content />
        </div>

        <!-- Footer -->
        <footer class="mt-12 pt-8 border-t border-border flex items-center justify-between">
          <a
            href="/pizza"
            class="inline-flex items-center gap-2 text-accent hover:text-accent-hover transition-colors"
          >
            <Icon name="lucide:arrow-left" class="w-4 h-4" />
            More Recipes
          </a>
          <span class="text-text-muted text-sm font-mono">LEVEL COMPLETE!</span>
        </footer>
      </div>
    </article>
  </div>
</BaseLayout>
