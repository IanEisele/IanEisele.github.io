---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

export async function getStaticPaths() {
  const posts = await getCollection('pizza');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'pizza'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${post.data.title} | Pizza Quest`}
  description={post.data.description}
>
  <div class="min-h-screen">
    <!-- Header -->
    <header class="border-b border-border bg-surface/50 backdrop-blur-sm sticky top-0 z-50">
      <div class="mx-auto max-w-4xl px-4 py-4 flex items-center justify-between">
        <a href="/pizza" class="flex items-center gap-3 group">
          <span class="text-2xl">üçï</span>
          <span class="text-xl font-semibold text-text group-hover:text-accent transition-colors">
            Pizza Quest
          </span>
        </a>
        <a
          href="/pizza"
          class="text-text-muted hover:text-accent transition-colors text-sm flex items-center gap-2"
        >
          <Icon name="lucide:arrow-left" class="w-4 h-4" />
          All Posts
        </a>
      </div>
    </header>

    <!-- Article -->
    <article class="py-12 px-4">
      <div class="mx-auto max-w-3xl">
        <!-- Hero Image -->
        {post.data.heroImage ? (
          <div class="aspect-video overflow-hidden rounded-lg mb-8 border border-border">
            <img
              src={post.data.heroImage}
              alt={post.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        ) : (
          <div class="aspect-video bg-surface rounded-lg mb-8 flex items-center justify-center border border-border">
            <span class="text-8xl">üçï</span>
          </div>
        )}

        <!-- Header -->
        <header class="mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            {post.data.title}
          </h1>

          <p class="text-text-muted text-lg mb-6">
            {post.data.description}
          </p>

          <!-- Meta -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-text-muted mb-6">
            <span class="flex items-center gap-2">
              <Icon name="lucide:calendar" class="w-4 h-4" />
              {formattedDate}
            </span>
            {post.data.prepTime && (
              <span class="flex items-center gap-2">
                <Icon name="lucide:clock" class="w-4 h-4" />
                Prep: {post.data.prepTime}
              </span>
            )}
            {post.data.cookTime && (
              <span class="flex items-center gap-2">
                <Icon name="lucide:flame" class="w-4 h-4" />
                Cook: {post.data.cookTime}
              </span>
            )}
          </div>

          <!-- Tags and difficulty -->
          <div class="flex flex-wrap items-center gap-2">
            {post.data.difficulty && (
              <span class="text-xs font-mono text-accent bg-accent/10 px-2 py-1 rounded">
                {post.data.difficulty}
              </span>
            )}
            {post.data.tags?.map((tag) => (
              <span class="text-xs font-mono text-text-muted bg-surface px-2 py-1 rounded border border-border">
                {tag}
              </span>
            ))}
          </div>
        </header>

        <!-- Divider -->
        <div class="flex items-center gap-4 mb-8">
          <div class="flex-1 h-px bg-border"></div>
          <span class="text-accent">üçï</span>
          <div class="flex-1 h-px bg-border"></div>
        </div>

        <!-- Content -->
        <div class="prose">
          <Content />
        </div>

        <!-- Footer -->
        <footer class="mt-12 pt-8 border-t border-border flex items-center justify-between">
          <a
            href="/pizza"
            class="inline-flex items-center gap-2 text-accent hover:text-accent-hover transition-colors"
          >
            <Icon name="lucide:arrow-left" class="w-4 h-4" />
            More Recipes
          </a>
          <span class="text-text-muted text-sm font-mono">LEVEL COMPLETE!</span>
        </footer>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .prose {
    color: var(--color-text);
    line-height: 1.75;
  }

  .prose :global(h2) {
    color: var(--color-text);
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(h3) {
    color: var(--color-text);
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
    color: var(--color-text-muted);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(ul) {
    list-style-type: disc;
  }

  .prose :global(ol) {
    list-style-type: decimal;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .prose :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose :global(code) {
    background: var(--color-surface);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose :global(pre) {
    background: var(--color-surface);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .prose :global(img) {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    border: 1px solid var(--color-border);
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }
</style>
