---
import skillsData from '../../data/skills.json';
---

<section id="skills" class="py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="stagger-children">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-12 flex items-center gap-4">
        <span class="text-accent">//</span>
        Skills
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          skillsData.categories.map((category) => (
            <div
              class="bg-surface border border-border rounded-xl p-6 hover-glow"
              data-animate
            >
              <h3 class="text-lg font-semibold text-accent mb-4">{category.name}</h3>
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                  <span class="px-3 py-1 bg-bg text-text-muted text-sm rounded-full border border-border hover:border-accent hover:text-accent transition-colors">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
