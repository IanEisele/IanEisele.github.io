---
import { Icon } from 'astro-icon/components';
import profile from '../../data/profile.json';

const contactLinks = [
  {
    href: `mailto:${profile.contact.email}`,
    icon: 'lucide:mail',
    label: 'Email',
    value: profile.contact.email,
  },
  {
    href: profile.contact.github,
    icon: 'lucide:github',
    label: 'GitHub',
    value: profile.contact.github.replace('https://', ''),
  },
  {
    href: profile.contact.linkedin,
    icon: 'lucide:linkedin',
    label: 'LinkedIn',
    value: profile.contact.linkedin.replace('https://', ''),
  },
];
---

<section id="contact" class="py-24 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <div class="stagger-children">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-6 flex items-center justify-center gap-4">
        <span class="text-accent">//</span>
        Get in Touch
      </h2>

      <p class="text-text-muted text-lg mb-12 max-w-2xl mx-auto">
        I'm always open to discussing new opportunities, interesting projects, or
        just having a conversation about technology and science. Feel free to reach out!
      </p>

      <div class="grid sm:grid-cols-3 gap-6 mb-12">
        {
          contactLinks.map((link) => (
            <a
              href={link.href}
              target={link.href.startsWith('mailto') ? undefined : '_blank'}
              rel={link.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
              class="bg-surface border border-border rounded-xl p-6 hover-glow group transition-all"
              data-animate
            >
              <Icon
                name={link.icon}
                class="w-8 h-8 text-accent mx-auto mb-4 group-hover:scale-110 transition-transform"
              />
              <h3 class="text-text font-medium mb-1">{link.label}</h3>
              <p class="text-text-muted text-sm truncate">{link.value}</p>
            </a>
          ))
        }
      </div>

      <a
        href={`mailto:${profile.contact.email}`}
        class="inline-flex items-center gap-2 bg-accent hover:bg-accent-hover text-bg font-semibold px-8 py-4 rounded-lg transition-all hover-glow text-lg"
      >
        <Icon name="lucide:send" class="w-5 h-5" />
        Send me a message
      </a>
    </div>
  </div>
</section>
