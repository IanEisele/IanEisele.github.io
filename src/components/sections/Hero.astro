---
import { Icon } from 'astro-icon/components';
import profile from '../../data/profile.json';
---

<section id="hero" class="min-h-screen flex items-center justify-center px-4 pt-16">
  <div class="max-w-4xl mx-auto text-center">
    <div class="stagger-children animate">
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-text mb-6">
        {profile.name}
      </h1>

      <h2 class="text-2xl sm:text-3xl lg:text-4xl text-text-muted mb-8">
        {profile.title}
      </h2>

      <p class="text-text-muted text-lg max-w-2xl mx-auto mb-12 leading-relaxed">
        Specializing in {
          profile.tagline.highlights.map((item, index) => (
            <>
              <span class="text-accent">{item}</span>
              {index < profile.tagline.highlights.length - 2 && ', '}
              {index === profile.tagline.highlights.length - 2 && ', and '}
            </>
          ))
        }.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="https://linkedin.com/in/ianeisele"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-accent hover:bg-accent-hover text-bg font-semibold px-8 py-3 rounded-lg transition-all hover-glow"
        >
          <Icon name="lucide:linkedin" class="w-5 h-5" />
          Connect on LinkedIn
        </a>

        <a
          href="#publications"
          class="inline-flex items-center gap-2 border border-border hover:border-accent text-text hover:text-accent font-semibold px-8 py-3 rounded-lg transition-all"
        >
          <Icon name="lucide:file-text" class="w-5 h-5" />
          View Publications
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <button
        type="button"
        aria-label="Scroll to about section"
        class="text-text-muted hover:text-accent transition-colors cursor-pointer"
        onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' })"
      >
        <Icon name="lucide:chevron-down" class="w-8 h-8" />
      </button>
    </div>
  </div>
</section>
