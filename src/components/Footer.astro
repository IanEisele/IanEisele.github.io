---
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://github.com/IanEisele', icon: 'lucide:github', label: 'GitHub' },
  { href: 'https://linkedin.com/in/ianeisele', icon: 'lucide:linkedin', label: 'LinkedIn' },
];
---

<footer class="border-t border-border bg-surface/50">
  <div class="mx-auto max-w-6xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-muted text-sm">
        &copy; {currentYear} Ian Eisele. All rights reserved.
      </p>

      <div class="flex items-center gap-4">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-muted hover:text-accent transition-colors"
              aria-label={link.label}
            >
              <Icon name={link.icon} class="w-5 h-5" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
